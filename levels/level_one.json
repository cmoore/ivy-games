{ "materials" : { // A list of the textures used and how to load them.
    "dirt-grass" : { // 'dirt-grass' is used as the texture identifier.
        "type" : "map", // blocks1.png is a spritemap (lots of different images in one file.)
        "file" : "/blocks/blocks1.png", // the location of the physical map
        "position" : [2,1], // where on the x/y grid the picture is.
        "texture-size" : [64,64] // size of the texture in pixels.
        // So, for this one, the top left corner of the sprite is 128 pixels to the right and
        // 64 pixels down from the top left corner of the sprite map image.
        // from there, if you ready a 64/64 chunk of the image, you'll get the sprite.
    },
    "ground" : {
        "type" : "direct", // direct = one image file -> one sprite.
        "file" : "/blocks/thing.png"
    },
    "sword" : {
        "type" : "map",
        "file" : "/blocks/blocks1.png",
        "position" : [1,2],
        "texture-size" : [64,64]
    },
    "block" : {
        "type" : "direct",
        "file" : "/block.png"
    }},
  "structures" : {
     "coop" : [
        { "material" : "dirt-grass",
          "structure" : [ [1,1], [2,1], [3,1] ] },
        { "material" : "block",
          "structure" : [ [0,0], [1,0], [2,0], [3,0], [4,0], [4,1],
                          [4,2], [4,3], [3,3], [2,3], [1,3], [0,3] ]}]
  },
  "layout" : { "horizon" : [256,0],
               "entities" : [ { "offset" : [256,0],
                                "structure" : "coop" },
                              { "offset" : [512,0],
                                "structure" : "coop" } ]
             }
}
